{
  "global": {
    "borderWidth": {
      "button": {
        "ghost": {
          "value": "$borderWidth.md",
          "type": "borderWidth"
        }
      }
    },
    "borderRadius": {
      "button": {
        "ghost": {
          "value": "$borderRadius.lg",
          "type": "borderRadius"
        }
      },
      "card": {
        "value": "{borderRadius.sm}",
        "type": "borderRadius"
      }
    },
    "fontSizes": {
      "card": {
        "title": {
          "value": "{fontSizes.sm}",
          "type": "fontSizes"
        },
        "content": {
          "value": "{fontSizes.xs}",
          "type": "fontSizes"
        }
      }
    },
    "boxShadow": {
      "default": {
        "value": [
          {
            "x": "5",
            "y": "5",
            "spread": "3",
            "color": "rgba({shadows.default}, 0.15)",
            "blur": "5",
            "type": "dropShadow"
          },
          {
            "x": "4",
            "y": "4",
            "spread": "6",
            "color": "#00000033",
            "blur": "5",
            "type": "innerShadow"
          }
        ],
        "type": "boxShadow"
      }
    },
    "page": {
      "lg": {
        "margin": {
          "value": "{spacing.lg}*2",
          "type": "spacing"
        }
      },
      "sm": {
        "margin": {
          "value": "{spacing.md} * 1.5",
          "type": "spacing"
        }
      }
    },
    "primary": {
      "default": {
        "value": "#3cdab6",
        "type": "color",
        "description": "Primary brand color for links, buttons, etc."
      }
    },
    "secondary": {
      "default": {
        "value": "#f78615",
        "type": "color",
        "description": "A secondary brand color for alternative styling"
      }
    },
    "accent": {
      "default": {
        "value": "#e8ec36",
        "type": "color",
        "description": "A contrast color for emphasizing UI"
      }
    }
  }
}